<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT ITEM:"
            style="@style/custom_text_view"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/qtyLabel"
                android:layout_height="wrap_content"
                style="@style/custom_text_view"
                android:text="Choose Quantity:"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:solidColor="@android:color/white"
                android:isScrollContainer="true"
                android:layout_alignParentRight="true"
                android:id="@+id/quantityPicker"
                android:layout_alignTop="@id/qtyLabel"
                android:layout_alignBottom="@id/qtyLabel"
                android:scaleY="1.50"
                android:scaleX="1.50"
                android:paddingRight="0dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Requirements:"
            android:layout_marginLeft="0dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex: without cheese"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:layout_marginLeft="0dp"
                android:text="Delete item:"
                android:layout_weight="0.9"
                android:textSize="18sp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="0dp"
                android:backgroundTint="@android:color/white"
                android:src="@drawable/ic_delete_item"
                android:layout_weight="0.1"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="1">

            <Button
                android:id="@+id/cancelEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Cancel"
                android:background="@android:color/transparent"
                android:layout_toLeftOf="@id/saveEditButton"
                android:paddingRight="0dp"/>

            <Button
                android:id="@+id/saveEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:paddingRight="0dp"
                android:text="Save"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>